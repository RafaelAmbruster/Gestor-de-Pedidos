<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/widget_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
            android:id="@+id/Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="10dip"
            android:text="Code"
            android:textColor="@color/black50"
            android:textSize="18sp"
            ttf:typeface="RobotoCondensed-Regular.ttf" />

        <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Code"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="10dip"
            android:text="Name"
            android:textColor="@color/black50"
            android:textSize="18sp"
            ttf:typeface="RobotoCondensed-Regular.ttf" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_options"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/widget_info"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.gc.materialdesign.views.ButtonFloatSmall
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/bg_main"
            materialdesign:iconDrawable="@drawable/ic_add_white_24dp" />

        <com.gc.materialdesign.views.ButtonFloatSmall
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/bg_main"
            materialdesign:iconDrawable="@drawable/remove" />


        <com.gc.materialdesign.views.ButtonFloatSmall
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/bg_main"
            materialdesign:iconDrawable="@drawable/save" />

        <com.gc.materialdesign.views.ButtonFloatSmall
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/bg_main"
            materialdesign:iconDrawable="@drawable/send" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/widget_options"
        android:background="@color/bg_main"
        android:orientation="horizontal">

        <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
            android:id="@+id/HeaderRequest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingEnd="5dp"
            android:paddingLeft="10dip"
            android:paddingRight="5dp"
            android:text="Cantidad"
            android:textColor="@color/white"
            android:textSize="18sp"
            ttf:typeface="RobotoCondensed-Regular.ttf" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />

        <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
            android:id="@+id/HeaderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="5dip"
            android:text="Código"
            android:textColor="@color/white"
            android:textSize="18sp"
            ttf:typeface="RobotoCondensed-Regular.ttf" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />

        <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
            android:id="@+id/HeaderClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="5dip"
            android:text="Artículo"
            android:textColor="@color/white"
            android:textSize="18sp"
            ttf:typeface="RobotoCondensed-Regular.ttf" />


    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/divider_light"
        android:id="@+id/linearLayout3" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list"
        style="@style/GPListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:background="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:descendantFocusability="blocksDescendants"
        android:divider="@drawable/shape_info_box"
        android:dividerHeight="1dp" />


</RelativeLayout>