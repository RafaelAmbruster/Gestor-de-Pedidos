<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_vertical"
    android:animateLayoutChanges="true"
    android:background="#e1e1e1">

    <View
        android:id="@+id/view4"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="?android:attr/dividerVertical" />

    <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
        android:id="@+id/client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="10dip"
        android:text="Para Rafael"
        android:textColor="@color/black50"
        android:textSize="15sp"
        ttf:typeface="RobotoCondensed-Regular.ttf" />

    <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignEnd="@+id/view4"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/view4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="10dip"
        android:text="De Rafael"
        android:textColor="@color/black50"
        android:textSize="15sp"
        ttf:typeface="RobotoCondensed-Regular.ttf" />

    <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_toRightOf="@+id/view4"
        android:text="Today"
        android:lines="1"
        android:textColor="@color/black50"
        android:textSize="15sp"
        ttf:typeface="RobotoCondensed-Regular.ttf" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/dividerVertical" />



</RelativeLayout>

