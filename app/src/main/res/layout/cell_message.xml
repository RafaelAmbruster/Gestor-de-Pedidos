<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_family"
    android:background="@android:color/white"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_family">

            <RelativeLayout
                android:id="@+id/ClientData"
                android:layout_width="match_parent"
                android:layout_height="75dip"
                android:background="@color/white80"
                android:paddingBottom="5dip"
                android:paddingRight="5dip"
                android:paddingLeft="90dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">

                <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dip"
                    android:text="Name"
                    android:textColor="@color/black50"
                    android:textSize="15sp"
                    ttf:typeface="RobotoCondensed-Regular.ttf"
                    android:layout_below="@+id/Code"
                    android:layout_alignParentBottom="true" />

                <com.app.ambruster.gestiondepedidos.view.textview.TypefacedTextView
                    android:id="@+id/Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dip"
                    android:text="00001"
                    android:textColor="@color/black70"
                    android:textSize="20sp"
                    ttf:typeface="RobotoCondensed-Regular.ttf"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/Name"
                    android:layout_alignEnd="@+id/Name" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="214dp"
                    android:layout_marginStart="214dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imageIconLayout"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/frame"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gradient_placeholder" />

                <ImageView
                    android:id="@+id/placeholder_image"
                    android:layout_width="65dip"
                    android:layout_height="65dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/messagewhite" />

            </RelativeLayout>
        </RelativeLayout>

    <View style="@style/Divider"/>



</LinearLayout>